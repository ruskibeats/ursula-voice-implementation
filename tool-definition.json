{
    "name": "SSML_Generator",
    "description": "A tool for generating SSML markup for text-to-speech applications",
    "version": "1.0.0",
    "input_parameters": {
        "text": "Text content to convert to SSML",
        "emotion": "Optional emotional style (happy, sad, excited, etc.)",
        "rate": "Optional speech rate (slow, medium, fast)",
        "pitch": "Optional pitch adjustment",
        "volume": "Optional volume level"
    },
    "quick_templates": {
        "basic": "<speak>${text}</speak>",
        "emotional": "<speak><amazon:emotion name='${emotion}'>${text}</amazon:emotion></speak>",
        "advanced": "<speak><prosody rate='${rate}' pitch='${pitch}'><amazon:emotion name='${emotion}'>${text}</amazon:emotion></prosody></speak>"
    },
    "common_emotions": ["happy", "sad", "excited", "serious"],
    "common_rates": ["slow", "medium", "fast"],
    "common_volumes": ["soft", "medium", "loud"]
}
