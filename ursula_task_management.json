            "examples": [
                "Oil change in two months",
                "Buy groceries",
                "Regular maintenance"
            ],
            "ssml_pattern": "<prosody rate='95%'>$TEXT</prosody>",
            "story_references": ["The Empty Fridge Saga", "The Maintenance Miracle"]
        }
    },
